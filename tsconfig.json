{
    "compilerOptions": {
        "outDir": "./dist/",
        "strict": false,
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "module": "es6",
        "target": "es2022",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "es2015",
            "dom",
            "ESNext"
        ]
    },
    "exclude": [
        "node_modules",
        ".git"
    ]
}
